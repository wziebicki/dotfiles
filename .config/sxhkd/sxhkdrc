# Basic binds
super + Return
        $TERMINAL
super + d
        dmenu_run
super + n
        $TERMINAL -e neomutt
super + shift + a
        $TERMINAL -e pulsemixer
super + shift + w
        $BROWSER
super + Insert
        clipmenu
super + v
        nvim-qt
super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Reboot computer?" "sudo -A reboot"  
super + x
  screenlock
#
# Environment
super + e ; {s}
    { \
    pkill -USR1 -x sxhkd && notify-send -i key_bindings "Reloaded key bindings", \
    }
